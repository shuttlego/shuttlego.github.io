{
  "uid": "shuttle-go-main",
  "title": "ShuttleGo - API Monitoring",
  "tags": ["shuttle-go", "backend"],
  "timezone": "Asia/Seoul",
  "refresh": "30s",
  "time": { "from": "now-6h", "to": "now" },
  "editable": true,
  "schemaVersion": 39,
  "panels": [
    {
      "type": "row",
      "title": "사용자 활동 (DAU / MAU)",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "id": 1,
      "title": "DAU (일간 활성 사용자)",
      "type": "stat",
      "gridPos": { "h": 5, "w": 4, "x": 0, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "shuttle:dau",
          "legendFormat": "DAU",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "green", "value": 50 }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "value",
        "graphMode": "area",
        "textMode": "auto"
      }
    },
    {
      "id": 2,
      "title": "MAU (월간 활성 사용자)",
      "type": "stat",
      "gridPos": { "h": 5, "w": 4, "x": 4, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "shuttle:mau",
          "legendFormat": "MAU",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "green", "value": 200 }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "value",
        "graphMode": "area",
        "textMode": "auto"
      }
    },
    {
      "id": 3,
      "title": "DAU 추이",
      "type": "timeseries",
      "gridPos": { "h": 5, "w": 8, "x": 8, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "shuttle:dau",
          "legendFormat": "DAU",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 20,
            "pointSize": 5,
            "showPoints": "auto"
          }
        }
      }
    },
    {
      "id": 4,
      "title": "동시 처리 요청",
      "type": "stat",
      "gridPos": { "h": 5, "w": 4, "x": 16, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "shuttle_in_progress_requests",
          "legendFormat": "In Progress",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "value",
        "graphMode": "none"
      }
    },
    {
      "id": 5,
      "title": "에러율 (5분)",
      "type": "stat",
      "gridPos": { "h": 5, "w": 4, "x": 20, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "shuttle:error_rate_5m or vector(0)",
          "legendFormat": "Error Rate",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.01 },
              { "color": "red", "value": 0.05 }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "type": "row",
      "title": "요청 개요",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 6 },
      "collapsed": false
    },
    {
      "id": 10,
      "title": "요청률 (RPS)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 7 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum(rate(shuttle_http_requests_total[5m]))",
          "legendFormat": "Total RPS",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 15,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 11,
      "title": "엔드포인트별 요청률",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 7 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum by (endpoint) (rate(shuttle_http_requests_total[5m]))",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 1,
            "fillOpacity": 30,
            "stacking": { "mode": "normal" },
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 12,
      "title": "HTTP 상태 코드 분포 (1시간)",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 7 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum by (status) (increase(shuttle_http_requests_total[1h]))",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "legend": { "displayMode": "table", "placement": "right" },
        "pieType": "donut"
      }
    },
    {
      "type": "row",
      "title": "레이턴시",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 15 },
      "collapsed": false
    },
    {
      "id": 20,
      "title": "레이턴시 (P50 / P90 / P99)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "shuttle:latency_p50",
          "legendFormat": "P50",
          "refId": "A"
        },
        {
          "expr": "shuttle:latency_p90",
          "legendFormat": "P90",
          "refId": "B"
        },
        {
          "expr": "shuttle:latency_p99",
          "legendFormat": "P99",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 21,
      "title": "엔드포인트별 P95 레이턴시",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, endpoint) (rate(shuttle_http_request_duration_seconds_bucket[5m])))",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 1,
            "fillOpacity": 10,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "type": "row",
      "title": "비즈니스 메트릭 (셔틀)",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 24 },
      "collapsed": false
    },
    {
      "id": 30,
      "title": "출근 검색 수 (누적)",
      "type": "stat",
      "gridPos": { "h": 5, "w": 4, "x": 0, "y": 25 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "shuttle_search_total{direction=\"depart\"}",
          "legendFormat": "출근",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "blue", "mode": "fixed" }
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 31,
      "title": "퇴근 검색 수 (누적)",
      "type": "stat",
      "gridPos": { "h": 5, "w": 4, "x": 4, "y": 25 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "shuttle_search_total{direction=\"arrive\"}",
          "legendFormat": "퇴근",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "orange", "mode": "fixed" }
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 32,
      "title": "출근 vs 퇴근 검색률",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 25 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "rate(shuttle_search_total{direction=\"depart\"}[5m])",
          "legendFormat": "출근 (Depart)",
          "refId": "A"
        },
        {
          "expr": "rate(shuttle_search_total{direction=\"arrive\"}[5m])",
          "legendFormat": "퇴근 (Arrive)",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 20,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 33,
      "title": "카카오 API 호출",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 25 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "rate(shuttle_kakao_api_calls_total{status=\"success\"}[5m])",
          "legendFormat": "Success",
          "refId": "A"
        },
        {
          "expr": "rate(shuttle_kakao_api_calls_total{status=\"error\"}[5m])",
          "legendFormat": "Error",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 15,
            "showPoints": "never"
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Error" },
            "properties": [
              { "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }
            ]
          }
        ]
      }
    },
    {
      "id": 34,
      "title": "카카오 API 에러율",
      "type": "gauge",
      "gridPos": { "h": 5, "w": 4, "x": 0, "y": 30 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "shuttle:kakao_error_ratio_5m or vector(0)",
          "legendFormat": "Error Ratio",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.05 },
              { "color": "red", "value": 0.1 }
            ]
          }
        }
      }
    },
    {
      "id": 35,
      "title": "카카오 API 호출 수 (누적)",
      "type": "stat",
      "gridPos": { "h": 5, "w": 4, "x": 4, "y": 30 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum(shuttle_kakao_api_calls_total)",
          "legendFormat": "Total",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "purple", "mode": "fixed" }
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "type": "row",
      "title": "인프라 (노드 메트릭)",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 35 },
      "collapsed": false
    },
    {
      "id": 40,
      "title": "CPU 사용률",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 36 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "100 - (avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 30,
            "showPoints": "never",
            "thresholdsStyle": { "mode": "line+area" }
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "transparent", "value": null },
              { "color": "red", "value": 80 }
            ]
          }
        }
      }
    },
    {
      "id": 41,
      "title": "메모리 사용률",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 6, "y": 36 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "(1 - node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes) * 100",
          "legendFormat": "Memory %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "id": 42,
      "title": "디스크 사용률",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 36 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "(1 - node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"}) * 100",
          "legendFormat": "Disk %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "id": 43,
      "title": "네트워크 I/O",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 36 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum(rate(node_network_receive_bytes_total{device!=\"lo\"}[5m]))",
          "legendFormat": "Receive",
          "refId": "A"
        },
        {
          "expr": "sum(rate(node_network_transmit_bytes_total{device!=\"lo\"}[5m]))",
          "legendFormat": "Transmit",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 15,
            "showPoints": "never"
          }
        }
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "DS_PROMETHEUS",
        "type": "datasource",
        "query": "prometheus",
        "current": { "text": "Prometheus", "value": "Prometheus" },
        "hide": 2
      }
    ]
  }
}
